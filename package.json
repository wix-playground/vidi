{
  "name": "vidi",
  "version": "0.5.0",
  "description": "<video> playback simplified",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "author": "Avi Vahl (avi.vahl@wix.com)",
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "clean": "rimraf ./dist",
    "copy:assets": "mkdirp ./dist/http-media-server/assets && ncp ./http-media-server/assets ./dist/http-media-server/assets",
    "build": "yarn run build:transpile && yarn run copy:assets",
    "build:transpile": "tsc -d",
    "build:watch": "tsc -d -w",
    "bundle": "webpack --progress",
    "minify": "webpack --progress -p --config webpack.prod.config.js",
    "mediaserver": "node ./dist/http-media-server/standalone",
    "pretest": "yarn run clean && yarn run build && yarn run bundle",
    "test": "node ./dist/test/boot-mediaserver-and-test",
    "start": "webpack-dev-server --progress"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.7",
    "chai": "^4.0.2",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-spec-reporter": "^0.0.31",
    "mkdirp": "^0.5.1",
    "mocha": "^3.4.2",
    "mocha-loader": "^1.1.1",
    "ncp": "^2.0.0",
    "rimraf": "^2.6.1",
    "ts-loader": "^2.2.1",
    "typescript": "^2.4.1",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0"
  },
  "dependencies": {
    "dashjs": "^2.5.0",
    "eventemitter3": "^2.0.3",
    "hls.js": "^0.7.9",
    "url-toolkit": "^2.1.1",
    "webworkify": "^1.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wix/vidi.git"
  },
  "keywords": [
    "video",
    "media",
    "html5",
    "mse",
    "adaptive",
    "hls",
    "dash",
    "mpeg"
  ],
  "bugs": {
    "url": "https://github.com/wix/vidi/issues"
  },
  "homepage": "https://github.com/wix/vidi"
}
