{
  "name": "vidi",
  "version": "0.3.1",
  "description": "<video> playback simplified",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist",
    "copy:assets": "mkdirp ./dist/http-media-server/assets && ncp ./http-media-server/assets ./dist/http-media-server/assets",
    "build": "npm run build:transpile && npm run copy:assets",
    "build:transpile": "tsc -d",
    "build:watch": "tsc -d -w",
    "bundle": "webpack --progress",
    "minify": "webpack --progress -p --config webpack.prod.config.js",
    "mediaserver": "node ./dist/http-media-server/standalone",
    "pretest": "npm run clean && npm run build && npm run bundle",
    "test": "node ./dist/test/boot-mediaserver-and-test",
    "start": "webpack-dev-server --progress"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wix/vidi.git"
  },
  "keywords": [
    "video",
    "media",
    "html5",
    "mse",
    "adaptive",
    "hls",
    "dash",
    "mpeg"
  ],
  "author": "Avi Vahl (avi.vahl@wix.com)",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/wix/vidi/issues"
  },
  "homepage": "https://github.com/wix/vidi#readme",
  "devDependencies": {
    "@types/chai": "3.4.34",
    "@types/mocha": "2.2.37",
    "@types/node": "7.0.0",
    "chai": "3.5.0",
    "karma": "1.3.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-firefox-launcher": "1.0.0",
    "karma-ie-launcher": "1.0.0",
    "karma-mocha": "1.3.0",
    "karma-safari-launcher": "1.0.0",
    "karma-spec-reporter": "0.0.26",
    "mkdirp": "0.5.1",
    "mocha": "3.2.0",
    "mocha-loader": "1.1.0",
    "ncp": "2.0.0",
    "rimraf": "2.5.4",
    "ts-loader": "1.3.3",
    "typescript": "2.1.5",
    "webpack": "2.2.0-rc.3",
    "webpack-dev-server": "2.2.0-rc.0"
  },
  "dependencies": {
    "dashjs": "2.4.0",
    "eventemitter3": "2.0.2",
    "hls.js": "0.6.17",
    "url-toolkit": "1.0.7",
    "webworkify": "1.4.0"
  }
}
