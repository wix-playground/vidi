{
  "name": "vidi",
  "version": "0.4.0",
  "description": "<video> playback simplified",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "author": "Avi Vahl (avi.vahl@wix.com)",
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "clean": "rimraf ./dist",
    "copy:assets": "mkdirp ./dist/http-media-server/assets && ncp ./http-media-server/assets ./dist/http-media-server/assets",
    "build": "npm run build:transpile && npm run copy:assets",
    "build:transpile": "tsc -d",
    "build:watch": "tsc -d -w",
    "bundle": "webpack --progress",
    "minify": "webpack --progress -p --config webpack.prod.config.js",
    "mediaserver": "node ./dist/http-media-server/standalone",
    "pretest": "npm run clean && npm run build && npm run bundle",
    "test": "node ./dist/test/boot-mediaserver-and-test",
    "start": "webpack-dev-server --progress"
  },
  "devDependencies": {
    "@types/chai": "3.4.35",
    "@types/mocha": "2.2.39",
    "@types/node": "7.0.5",
    "chai": "3.5.0",
    "karma": "1.5.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-firefox-launcher": "1.0.0",
    "karma-ie-launcher": "1.0.0",
    "karma-mocha": "1.3.0",
    "karma-safari-launcher": "1.0.0",
    "karma-spec-reporter": "0.0.26",
    "mkdirp": "0.5.1",
    "mocha": "3.2.0",
    "mocha-loader": "1.1.0",
    "ncp": "2.0.0",
    "rimraf": "2.6.0",
    "ts-loader": "2.0.1",
    "typescript": "2.2.1",
    "webpack": "2.2.1",
    "webpack-dev-server": "2.4.1"
  },
  "dependencies": {
    "dashjs": "2.4.1",
    "eventemitter3": "2.0.2",
    "hls.js": "0.7.1",
    "url-toolkit": "1.0.10",
    "webworkify": "1.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wix/vidi.git"
  },
  "keywords": [
    "video",
    "media",
    "html5",
    "mse",
    "adaptive",
    "hls",
    "dash",
    "mpeg"
  ],
  "bugs": {
    "url": "https://github.com/wix/vidi/issues"
  },
  "homepage": "https://github.com/wix/vidi"
}
